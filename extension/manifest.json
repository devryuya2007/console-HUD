{
  "manifest_version": 3,
  "name": "console-HUD",
  "description": "ショートカットキーからコンソールやストレージの操作を呼び出せる軽量デバッグHUD",
  "version": "0.1.0",
  "icons": {
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "action": {
    "default_title": "console-HUD",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "browsingData"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "hard-reset": {
      "suggested_key": {
        "default": "Ctrl+Shift+R"
      },
      "description": "Hard Reset: キャッシュを無視してページを再読み込みする"
    },
    "console-display": {
      "suggested_key": {
        "default": "Ctrl+Shift+C"
      },
      "description": "console 表示パネルをオーバーレイで表示する"
    },
    "localstorage-display": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "localStorage 情報をオーバーレイで表示する"
    }
  }
}
